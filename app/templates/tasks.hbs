{{#each model as | task |}}
  <div class="well">
    <h4>Task title: {{task.title}}</h4>
    <small>Due: {{format-date task.date}}</small>
    <p>Task description: {{task.description}}</p>
    <p>{{#link-to 'tasks.edit' task.id}}edit{{/link-to}}</p>
  </div>
{{/each}}